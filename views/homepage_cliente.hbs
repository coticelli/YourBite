        // Filter products by category
        function filterProductsByCategory(category) {
            if (category === 'all') {
                filteredProducts = [...allProducts];
            } else {
                filteredProducts = allProducts.filter(product => product.category === category);
            }
            
            applyFilters(false);
        }
        
        // Apply all filters
        function applyFilters(showToastNotification = true) {
            const maxPrice = parseFloat(document.getElementById('priceFilter').value);
            const ingredient = document.getElementById('ingredientFilter').value.toLowerCase().trim();
            
            // Start with current category filtering
            let result = [...filteredProducts];
            
            // Apply price filter
            result = result.filter(product => product.price <= maxPrice);
            
            // Apply ingredient filter
            if (ingredient) {
                result = result.filter(product => {
                    return product.ingredients && product.ingredients.some(ing => 
                        ing.toLowerCase().includes(ingredient)
                    );
                });
            }
            
            // Display filtered products
            displayProducts(result);
            
            // Apply current sort
            const sortValue = document.getElementById('sortSelect').value;
            sortProducts(sortValue, false);
        }
        
        // Set products view
        function setProductsView(view) {
            currentView = view;
            displayProducts(filteredProducts);
