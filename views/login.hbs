<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {{!-- Titolo dinamico --}}
    <title>{{pageTitle}}</title>
    {{!-- Percorso CSS assoluto --}}
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <!-- Header Section -->
    <div class="header">
        <!-- Logo -->
        {{!-- Percorso immagine assoluto --}}
        <img src="/img/logo.png" alt="YourBite Logo" class="logo">
    </div>

    <!-- Main Content -->
    <div class="content">
        <div>
            {{!-- Link aggiornati alle route Express --}}
            <button class="tab active"><a href="/login" style="text-decoration:none; color: black;">Log in</a></button>
            <button class="tab"><a href="/signup" style="text-decoration:none; color: black;">Sign Up</a></button><br><br>
        </div>
        <div class="welcome-message"><br>
            Log in to Your Account
        </div>

        <!-- Login Form -->
        <form id="loginForm" class="form">
            <div class="form-group">
                <input type="email" id="email" placeholder=" " required autocomplete="email">
                <label for="email">E-mail</label>
            </div>
            <div class="form-group">
                <input type="password" id="password" placeholder=" " required autocomplete="current-password">
                <label for="password">Password</label>
            </div>
            <button type="submit" class="primary-btn">Log in</button>
        </form>

        <!-- Message Div for errors -->
        <div id="message" style="color: red; font-size: 16px;"></div>

        <!-- Google Sign-In Button -->
        <div class="google-signin">
            <a href="/auth/google" class="google-btn">
                <img src="https://developers.google.com/identity/images/g-logo.png" alt="Google logo" width="20px" height="20px">
                Sign in with Google
            </a>
        </div>
    </div>

 <script>
    document.getElementById('loginForm').addEventListener('submit', function(event) {
        event.preventDefault(); // Previeni l'invio tradizionale

        const emailInput = document.getElementById('email');
        const passwordInput = document.getElementById('password');
        const messageDiv = document.getElementById('message');
        messageDiv.innerText = ''; // Pulisci messaggi precedenti

        const email = emailInput.value;
        const password = passwordInput.value;

        // Validazione base frontend (opzionale ma consigliata)
        if (!email || !password) {
            messageDiv.innerText = 'Per favore, inserisci sia email che password.';
            return;
        }

        fetch('/login', { // Invia la richiesta all'endpoint POST /login
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ email, password })
        })
        .then(response => {
            // Controlla se la risposta Ã¨ JSON prima di provare a leggerla
            const contentType = response.headers.get("content-type");
            if (response.ok && contentType && contentType.indexOf("application/json") !== -1) {
                return response.json(); // Se OK e JSON, processa JSON
            } else {
                // Se non OK o non JSON, leggi come testo per vedere l'errore HTML/testo
                return response.text().then(text => {
                     // Lancia un errore specifico per gestirlo nel catch
                     throw new Error(text || `Errore ${response.status}: ${response.statusText}`);
                });
            }
        })
        .then(data => {
            console.log('Risposta JSON dal server:', data);
            if (data.success && data.redirectUrl) {
                // Login riuscito, reindirizza
                window.location.href = data.redirectUrl;
            } else {
                // Errore gestito dal server (es. credenziali errate)
                messageDiv.innerText = data.error || 'Errore sconosciuto dal server.';
                console.error('Errore logico dal server:', data.error);
            }
        })
        .catch(error => {
            console.error('Errore durante il fetch del login:', error);
             // Mostra l'errore nel div #message
             // Se l'errore contiene HTML (es. pagina 404/500), mostra un messaggio generico
             if (error.message && error.message.trim().startsWith('<')) {
                 messageDiv.innerText = 'Errore di comunicazione con il server. Riprova.';
             } else {
                 messageDiv.innerText = error.message || 'Errore durante il login. Riprova.';
             }
        });
    });
</script>
</body>
</html>