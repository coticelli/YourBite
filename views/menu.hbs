        border: none;
        color: white;
        padding: 5px 10px;
        border-radius: 4px;
        cursor: pointer;
        font-size: 14px;
        transition: background 0.3s;
    }

    .logout-btn:hover {
        background: rgba(255, 255, 255, 0.3);
    }

    /* Menu specifici */
    .menu-container {
        padding: 20px;
        max-width: 1200px;
        margin: 0 auto;
    }

    .menu-actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    .add-item-btn {
        background: #ff5100;
        color: white;
        border: none;
        padding: 10px 15px;
        border-radius: 5px;
        cursor: pointer;
        font-weight: 500;
        display: flex;
        align-items: center;
        gap: 5px;
    }

    .add-item-btn:hover {
        background: #e04600;
    }

    .categories-nav {
        display: flex;
        gap: 10px;
        margin-bottom: 20px;
        flex-wrap: wrap;
    }

    .category-btn {
        padding: 8px 15px;
        border: 1px solid #ddd;
        border-radius: 20px;
        background: white;
        cursor: pointer;
        transition: all 0.3s;
    }

    .category-btn.active {
        background: #ff5100;
        color: white;
        border-color: #ff5100;
    }

    .menu-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 20px;
    }

    .menu-item {
        background: white;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s;
    }

    .menu-item:hover {
        transform: translateY(-5px);
    }

    .menu-item-image {
        height: 180px;
        background-size: cover;
        background-position: center;
    }

    .menu-item-details {
        padding: 15px;
    }

    .menu-item-title {
        display: flex;
        justify-content: space-between;
        margin-bottom: 10px;
    }

    .menu-item-title h3 {
        margin: 0;
        font-size: 18px;
    }

    .menu-item-price {
        font-weight: bold;
        color: #ff5100;
    }

    .menu-item-description {
        color: #666;
        font-size: 14px;
        margin-bottom: 15px;
    }

    .menu-item-actions {
        display: flex;
        justify-content: space-between;
    }

    .action-btn {
        padding: 5px 10px;
        border: none;
        border-radius: 5px;
        font-size: 13px;
        cursor: pointer;
        transition: background 0.3s;
    }

    .edit-btn {
        background: #e7f7ee;
        color: #00a86b;
    }

    .delete-btn {
        background: #ffe7e7;
        color: #ff4d4d;
    }

    .action-btn:hover {
        opacity: 0.8;
    }

    .active-badge {
        background: #e7f7ee;
        color: #00a86b;
        padding: 3px 8px;
        border-radius: 10px;
        font-size: 12px;
        margin-left: 10px;
    }

    .inactive-badge {
        background: #f0f0f0;
        color: #777;
        padding: 3px 8px;
        border-radius: 10px;
        font-size: 12px;
        margin-left: 10px;
    }

    /* Media queries per responsività */
    @media (max-width: 768px) {
        header {
            flex-direction: column;
            padding: 10px;
        }
        
        .header-nav {
            margin-top: 15px;
            flex-wrap: wrap;
            justify-content: center;
            gap: 10px;
        }
        
        .menu-actions {
            flex-direction: column;
            gap: 15px;
            align-items: flex-start;
        }
        
        .categories-nav {
            overflow-x: auto;
            padding-bottom: 10px;
            white-space: nowrap;
            display: flex;
            flex-wrap: nowrap;
        }
    }
</style>
