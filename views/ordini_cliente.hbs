                y: 30,
                opacity: 0,
                duration: 0.8,
                stagger: 0.2,
                ease: 'back.out(1.2)',
                delay: 0.5
            });
            
            // Stats cards animation with ScrollTrigger
            gsap.registerPlugin(ScrollTrigger);
            
            gsap.from('.stat-card', {
