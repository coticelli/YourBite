        }

        .schedule-day:last-child {
            margin-bottom: 0;
            padding-bottom: 0;
            border-bottom: none;
        }

        .day-toggle {
            margin-right: 20px;
        }

        .day-name {
            width: 120px;
            font-weight: 600;
        }

        .day-hours {
            display: flex;
            flex-wrap: wrap;
            gap: 15px;
            flex-grow: 1;
        }

        .time-input {
            width: 100px;
        }

        .add-hours-btn {
            background: transparent;
            border: none;
            color: var(--primary);
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 5px;
            font-weight: 500;
            margin-left: 15px;
            transition: var(--transition);
        }

        .add-hours-btn:hover {
            color: var(--primary-light);
            transform: translateY(-2px);
        }

        /* === PAYMENT METHODS === */
        .payment-methods {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 25px;
        }

        .payment-method {
            background: var(--gray-light);
            border-radius: var(--radius-sm);
            padding: 20px;
            text-align: center;
            transition: var(--transition-spring);
            cursor: pointer;
            position: relative;
            overflow: hidden;
        }

        .payment-method:hover {
            transform: translateY(-5px);
            box-shadow: var(--shadow);
            background: white;
        }

        .payment-method.active {
            background: white;
            box-shadow: var(--shadow);
            border: 2px solid var(--primary);
        }

        .payment-method.active::after {
            content: "\f00c";
            font-family: "Font Awesome 5 Free";
            font-weight: 900;
            position: absolute;
            top: 10px;
            right: 10px;
            background: var(--primary);
            color: white;
            width: 20px;
            height: 20px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 10px;
        }

        .payment-icon {
            font-size: 30px;
            color: var(--primary);
            margin-bottom: 15px;
        }

        .payment-name {
            font-weight: 600;
            margin-bottom: 5px;
        }

        .payment-description {
            font-size: 12px;
            color: var(--text-light);
        }

        /* === USER MANAGEMENT === */
        .user-list {
            margin-bottom: 25px;
        }

        .user-item {
            display: flex;
            align-items: center;
            padding: 15px;
            border-radius: var(--radius-sm);
            margin-bottom: 15px;
            background: var(--gray-light);
            transition: var(--transition);
        }

        .user-item:hover {
            background: white;
            box-shadow: var(--shadow);
            transform: translateX(5px);
        }

        .user-avatar {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            overflow: hidden;
            margin-right: 15px;
            border: 2px solid var(--gray-dark);
            transition: var(--transition-spring);
        }

        .user-item:hover .user-avatar {
            border-color: var(--primary);
            transform: scale(1.1) rotate(10deg);
        }

        .user-avatar img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .user-info {
            flex-grow: 1;
        }

        .user-name {
            font-weight: 600;
            margin-bottom: 5px;
        }

        .user-role {
            font-size: 13px;
            color: var(--text-light);
        }

        .user-actions {
            display: flex;
            gap: 10px;
        }

        .user-action {
            width: 35px;
            height: 35px;
            border-radius: var(--radius-sm);
            display: flex;
            align-items: center;
            justify-content: center;
            background: white;
            color: var(--text);
            border: 1px solid var(--gray-dark);
            cursor: pointer;
            transition: var(--transition-spring);
        }

        .user-action:hover {
            transform: translateY(-3px);
        }

        .user-action.edit:hover {
            background: var(--primary);
            color: white;
            border-color: var(--primary);
        }

        .user-action.delete:hover {
            background: var(--accent-red);
            color: white;
            border-color: var(--accent-red);
        }

        .add-user-btn {
            width: 100%;
            padding: 15px;
            border-radius: var(--radius-sm);
            border: 2px dashed var(--gray-dark);
            background: transparent;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            font-weight: 600;
            color: var(--text);
            transition: var(--transition);
        }

        .add-user-btn:hover {
            border-color: var(--primary);
            color: var(--primary);
            background: rgba(94, 96, 206, 0.05);
        }

        /* === THEME PREVIEW === */
        .theme-preview {
            background: white;
            border-radius: var(--radius);
            overflow: hidden;
            box-shadow: var(--shadow);
            margin-bottom: 25px;
            transition: var(--transition);
        }

        .theme-header {
            background: linear-gradient(135deg, var(--primary), var(--primary-dark));
            height: 60px;
            padding: 0 20px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            position: relative;
        }

        .theme-logo {
            display: flex;
            align-items: center;
            gap: 10px;
            color: white;
            font-weight: 600;
            font-size: 18px;
        }

        .theme-nav {
            display: flex;
            gap: 10px;
        }

        .theme-nav-item {
            width: 30px;
            height: 5px;
            background: rgba(255, 255, 255, 0.5);
            border-radius: 3px;
        }

        .theme-nav-item:first-child {
            background: white;
        }

        .theme-body {
            padding: 20px;
            display: flex;
            gap: 15px;
        }

        .theme-sidebar {
            width: 80px;
            height: 150px;
            background: var(--gray-light);
            border-radius: var(--radius-sm);
        }

        .theme-content {
            flex-grow: 1;
            height: 150px;
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        .theme-box {
            height: 40px;
            background: var(--gray-light);
            border-radius: var(--radius-sm);
        }

        .theme-grid {
            display: flex;
            gap: 15px;
            flex-grow: 1;
        }

        .theme-card {
            flex: 1;
            background: var(--gray-light);
            border-radius: var(--radius-sm);
        }

        /* === SECURITY SECTION === */
        .security-status {
            display: flex;
            align-items: center;
            padding: 15px;
            border-radius: var(--radius-sm);
            margin-bottom: 25px;
            background: linear-gradient(135deg, #2ecc71, #27ae60);
            color: white;
        }

        .security-status-icon {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.2);
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 15px;
            font-size: 25px;
        }

        .security-status-info h3 {
            font-size: 18px;
            margin-bottom: 5px;
        }

        .security-status-info p {
            font-size: 14px;
            opacity: 0.9;
        }

        .security-warning {
            background: linear-gradient(135deg, #f39c12, #e67e22);
        }

        .security-danger {
            background: linear-gradient(135deg, #e74c3c, #c0392b);
        }

        .password-strength {
            height: 5px;
            background: var(--gray-dark);
            border-radius: 3px;
            margin-top: 10px;
            overflow: hidden;
        }

        .password-strength-bar {
            height: 100%;
            width: 70%;
            background: linear-gradient(to right, #e74c3c, #f39c12, #2ecc71);
            transition: var(--transition);
        }

