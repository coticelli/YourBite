<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>YourBite - Impostazioni</title>    <style>
    /* Stili base */
    body {
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f5f5f5;
        color: #333;
    }

    /* Header e navigazione */
    header {
        background: linear-gradient(to right, #ff7e00, #ff5100);
        padding: 15px 20px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        display: flex;
        align-items: center;
        justify-content: space-between;
        color: white;
    }

    .logo-container {
        display: flex;
        align-items: center;
    }

    .logo {
        width: 50px;
        height: auto;
        transition: transform 0.3s ease;
    }

    .logo:hover {
        transform: scale(1.05);
    }

    .header-title {
        color: white;
        font-size: 24px;
        font-weight: 700;
        margin-left: 15px;
        font-family: 'Arial', sans-serif;
    }

    .header-nav {
        display: flex;
        gap: 20px;
    }

    .header-nav a {
        color: white;
        text-decoration: none;
        font-weight: 500;
        padding: 8px 15px;
        border-radius: 20px;
        transition: background-color 0.3s;
    }

    .header-nav a:hover, .header-nav a.active {
        background-color: rgba(255, 255, 255, 0.2);
    }

    .header-nav a.active {
        font-weight: bold;
    }

    .user-role-badge {
        background-color: white;
        color: #ff5100;
        padding: 4px 12px;
        border-radius: 20px;
        font-weight: bold;
        font-size: 14px;
        margin-left: 10px;
    }

    .user-controls {
        display: flex;
        align-items: center;
        margin-left: 20px;
    }

    .username {
        color: white;
        font-weight: 500;
        margin-right: 10px;
    }

    .logout-btn {
        background: rgba(255, 255, 255, 0.2);
        border: none;
        color: white;
        padding: 5px 10px;
        border-radius: 4px;
        cursor: pointer;
        font-size: 14px;
        transition: background 0.3s;
    }

    .logout-btn:hover {
        background: rgba(255, 255, 255, 0.3);
    }

    /* Impostazioni specifici */
    .settings-container {
        padding: 20px;
        max-width: 1200px;
        margin: 0 auto;
    }

    .settings-grid {
        display: grid;
        grid-template-columns: 250px 1fr;
        gap: 20px;
    }

    .settings-nav {
        background: white;
        border-radius: 10px;
        padding: 15px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .settings-nav ul {
        list-style-type: none;
        padding: 0;
        margin: 0;
    }

    .settings-nav li {
        padding: 10px 15px;
        margin-bottom: 5px;
        border-radius: 5px;
        cursor: pointer;
    }

    .settings-nav li.active {
        background-color: #ff5100;
        color: white;
    }

    .settings-nav li:hover:not(.active) {
        background-color: #f5f5f5;
    }

    .settings-content {
        background: white;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .settings-section {
        margin-bottom: 30px;
    }

    .settings-section h2 {
        color: #333;
        margin-bottom: 15px;
        border-bottom: 1px solid #eee;
        padding-bottom: 10px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-group label {
        display: block;
        margin-bottom: 5px;
        font-weight: 500;
    }

    .form-group input, .form-group select, .form-group textarea {
        width: 100%;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 5px;
        font-size: 15px;
    }

    .toggle-switch {
        position: relative;
        display: inline-block;
        width: 50px;
        height: 24px;
    }

    .toggle-switch input {
        opacity: 0;
        width: 0;
        height: 0;
    }

    .toggle-slider {
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #ccc;
        transition: .4s;
        border-radius: 24px;
    }

    .toggle-slider:before {
        position: absolute;
        content: "";
        height: 16px;
        width: 16px;
        left: 4px;
        bottom: 4px;
        background-color: white;
        transition: .4s;
        border-radius: 50%;
    }

    input:checked + .toggle-slider {
        background-color: #ff5100;
    }

    input:checked + .toggle-slider:before {
        transform: translateX(26px);
    }

    .toggle-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px 0;
        border-bottom: 1px solid #eee;
    }

    .toggle-row:last-child {
        border-bottom: none;
    }

    .toggle-label {
        font-weight: 500;
    }

    .save-btn {
        background: #ff5100;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        font-weight: 500;
        margin-top: 10px;
    }

    .save-btn:hover {
        background: #e04600;
    }

    .logo-preview {
        width: 150px;
        height: 150px;
        border: 1px dashed #ddd;
        border-radius: 5px;
        display: flex;
        justify-content: center;
        align-items: center;
        margin-bottom: 10px;
    }

    .logo-preview img {
        max-width: 100%;
        max-height: 100%;
    }

    .upload-btn {
        background: #f5f5f5;
        border: 1px solid #ddd;
        padding: 8px 15px;
        border-radius: 5px;
        cursor: pointer;
        font-size: 14px;
    }

    /* Media queries per responsività */
    @media (max-width: 768px) {
        header {
            flex-direction: column;
            padding: 10px;
        }
        
        .header-nav {
            margin-top: 15px;
            flex-wrap: wrap;
            justify-content: center;
            gap: 10px;
        }
        
        .settings-grid {
            grid-template-columns: 1fr;
        }
        
        .settings-nav {
            margin-bottom: 20px;
        }
    }
</style>
</head>
<body class="capo-role">
    <!-- Header migliorato con gradiente arancione -->
    <header>
    <div class="logo-container">
         <img src="/img/logo.png" alt="YourBite Logo" class="logo">
        <h1 class="header-title">YourBite</h1>
    </div>
    
    <div class="header-nav">
    <a href="/dashboard">Dashboard</a>
    <a href="/ordini">Ordini</a>
    <a href="/menu">Menu</a>
    <a href="/clienti">Clienti</a>
    <a href="/impostazioni">Impostazioni</a>
    
    <div style="position: relative; margin-left: 10px;">
        <span id="notification-badge" style="background-color: red; color: white; border-radius: 50%; padding: 2px 6px; font-size: 12px; position: absolute; top: -5px; right: -5px; display: none;">0</span>
        <span class="user-role-badge">Capo</span>
    </div>
</div>
<div class="user-controls">
    <span class="username">{{user.username}}</span>
    <button class="logout-btn" onclick="logout()">Logout</button>
</div>
</header>

    <div class="settings-container">
        <h1>Impostazioni</h1>
        <p>Configura le impostazioni del tuo locale</p>

        <div class="settings-grid">
            <div class="settings-nav">
                <ul>
                    <li class="active">Profilo Locale</li>
                    <li>Orari di Apertura</li>
                    <li>Metodi di Pagamento</li>
                    <li>Notifiche</li>
                    <li>Gestione Utenti</li>
                    <li>Sicurezza</li>
                    <li>Applicazione Mobile</li>
                </ul>
            </div>
            <div class="settings-content">
                <div class="settings-section">
                    <h2>Profilo Locale</h2>
                    <div class="form-group">
                        <label for="restaurant-name">Nome del Locale</label>
                        <input type="text" id="restaurant-name" value="Fast Food da Mario">
                    </div>
                    <div class="form-group">
                        <label for="restaurant-address">Indirizzo</label>
                        <input type="text" id="restaurant-address" value="Via Roma 123, Milano">
                    </div>
                    <div class="form-group">
                        <label for="restaurant-phone">Telefono</label>
                        <input type="text" id="restaurant-phone" value="+39 02 1234567">
                    </div>
                    <div class="form-group">
                        <label for="restaurant-email">Email</label>
                        <input type="email" id="restaurant-email" value="info@fastfoodmario.it">
                    </div>
                    <div class="form-group">
                        <label for="restaurant-description">Descrizione</label>
                        <textarea id="restaurant-description" rows="4">Fast Food da Mario offre una vasta selezione di panini, pizze, patatine fritte e bevande. Serviamo cibo di qualità dal 2010.</textarea>
                    </div>
                    <div class="form-group">
                        <label>Logo</label>
                        <div class="logo-preview">
                            <img src="/images/logo.png" alt="Logo del ristorante">
                        </div>
                        <button class="upload-btn">Carica Nuovo Logo</button>
                    </div>
                </div>

                <div class="settings-section">
                    <h2>Impostazioni di Visualizzazione</h2>
                    <div class="toggle-row">
                        <span class="toggle-label">Mostra prezzi con IVA inclusa</span>
                        <label class="toggle-switch">
                            <input type="checkbox" checked>
                            <span class="toggle-slider"></span>
                        </label>
                    </div>
                    <div class="toggle-row">
                        <span class="toggle-label">Mostra ingredienti dei prodotti</span>
                        <label class="toggle-switch">
                            <input type="checkbox" checked>
                            <span class="toggle-slider"></span>
                        </label>
                    </div>
                    <div class="toggle-row">
                        <span class="toggle-label">Mostra valori nutrizionali</span>
                        <label class="toggle-switch">
                            <input type="checkbox">
                            <span class="toggle-slider"></span>
                        </label>
                    </div>
                    <div class="toggle-row">
                        <span class="toggle-label">Mostra allergeni</span>
                        <label class="toggle-switch">
                            <input type="checkbox" checked>
                            <span class="toggle-slider"></span>
                        </label>
                    </div>
                </div>

                <button class="save-btn">Salva Modifiche</button>
            </div>
        </div>
    </div>
    <script>
        // Salva questo file come public/js/capo-panel.js

// Funzione per il logout
function logout() {
    fetch('/logout', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        }
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            window.location.href = '/login';
        }
    })
    .catch(error => console.error('Errore durante il logout:', error));
}

// Funzione per caricare statistiche nella dashboard
function loadDashboardStats() {
    fetch('/statistiche')
        .then(response => response.json())
        .then(data => {
            // Aggiorna i dati della dashboard con i dati ricevuti
            document.getElementById('vendite-oggi').textContent = `€${data.venditeOggi}`;
            document.getElementById('ordini-oggi').textContent = data.ordiniOggi;
            document.getElementById('nuovi-clienti').textContent = data.clientiNuovi;
            // Aggiorna altri elementi della dashboard...
        })
        .catch(error => console.error('Errore caricamento statistiche:', error));
}

// Funzione per caricare notifiche
function loadNotifications() {
    fetch('/notifiche')
        .then(response => response.json())
        .then(notifications => {
            const notificationBadge = document.getElementById('notification-badge');
            const unreadCount = notifications.filter(n => !n.letto).length;
            
            if (unreadCount > 0) {
                notificationBadge.textContent = unreadCount;
                notificationBadge.style.display = 'inline-block';
            } else {
                notificationBadge.style.display = 'none';
            }
        })
        .catch(error => console.error('Errore caricamento notifiche:', error));
}

// Inizializza il pannello di controllo
document.addEventListener('DOMContentLoaded', function() {
    // Imposta la classe "active" sul link di navigazione corrente
    const currentPath = window.location.pathname;
    const navLinks = document.querySelectorAll('.header-nav a');
    
    navLinks.forEach(link => {
        link.classList.remove('active');
        if (link.getAttribute('href') === currentPath) {
            link.classList.add('active');
        }
    });
    
    // Carica dati se siamo nella dashboard
    if (currentPath === '/dashboard') {
        loadDashboardStats();
    }
    
    // Carica notifiche ogni minuto
    loadNotifications();
    setInterval(loadNotifications, 60000);
});
    </script>
</body>
</html>