                         sections.forEach(section => {
                             if (section.id !== targetId && section.classList.contains('active')) {
                                 section.style.opacity = '0';
                                 setTimeout(() => {
                                      section.classList.remove('active');
                                      section.style.opacity = ''; // Resetta per future animazioni
