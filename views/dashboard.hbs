                        updateElementText('pending-orders', data.ordiniInCorso || 12);
                        showToast('Dati aggiornati', 'Le statistiche della dashboard sono state aggiornate', 'success');
                    })
                    .catch(error => {
                        console.error('Errore caricamento statistiche:', error);
